# ===========================================
# Server Configuration
# ===========================================
PORT=3000
BASE_URL=http://localhost:3000

# ===========================================
# Database
# ===========================================
DATABASE_PATH=./data/rss-tracker.db

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=change-this-secret-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# LLM Provider Configuration
# ===========================================

# LLM Provider: 'openai' or 'gemini'
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_BASE_URL=https://api.openai.com/v1  # Optional: Custom API endpoint
OPENAI_DEFAULT_MODEL=gpt-4o-mini

# Gemini Configuration (if using LLM_PROVIDER=gemini)
# GEMINI_API_KEY=your-gemini-api-key-here
# GEMINI_MODEL=gemini-1.5-flash

# ===========================================
# Article Export
# ===========================================

# Article Export Directory
# Directory where markdown files are exported
ARTICLE_EXPORT_DIR=./data/exports

# ===========================================
# RSS Fetching Configuration
# ===========================================

# RSS Fetch Schedule (cron format)
# Default: "0 9 * * *" (daily at 9:00 AM)
RSS_FETCH_SCHEDULE=0 9 * * *

# Enable/disable automatic RSS fetching
RSS_FETCH_ENABLED=true

# Maximum concurrent RSS fetches
RSS_MAX_CONCURRENT=5

# RSS fetch timeout (milliseconds)
RSS_FETCH_TIMEOUT=30000

# ===========================================
# Logging
# ===========================================

# Log Level: 'debug', 'info', 'warn', 'error'
LOG_LEVEL=info

# Optional: Log file path (if not set, logs to stdout only)
# LOG_FILE=./logs/app.log
