<style>
  .detail-layout {
    display: flex;
    gap: 24px;
    align-items: flex-start;
  }
  .detail-main {
    flex: 1;
    min-width: 0;
  }
  .detail-sidebar {
    width: 280px;
    flex-shrink: 0;
  }
  .detail-main h1 {
    font-size: 1.5rem;
    margin-bottom: 8px;
    line-height: 1.4;
  }
  .meta {
    color: var(--dim);
    font-size: 0.85rem;
    margin-bottom: 24px;
    word-break: break-all;
  }
  .meta a { color: var(--accent); }
  .section {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 16px;
  }
  .section-title {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--dim);
    margin-bottom: 10px;
    font-weight: 600;
  }
  .insight {
    border-left: 3px solid var(--green);
    padding-left: 16px;
  }
  .content {
    font-size: 0.95rem;
    white-space: pre-wrap;
    word-break: break-word;
    max-height: 600px;
    overflow-y: auto;
  }
  /* Sidebar styles */
  .og-image {
    width: 100%;
    border-radius: 6px;
    margin-bottom: 16px;
  }
  .tags {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
  }
  .tag {
    background: var(--border);
    color: var(--dim);
    padding: 2px 10px;
    border-radius: 12px;
    font-size: 0.8rem;
  }
  .related-item {
    padding: 6px 0;
    border-bottom: 1px solid var(--border);
    font-size: 0.9rem;
    overflow-wrap: break-word;
    word-break: break-all;
  }
  .related-item:last-child { border-bottom: none; }
  .related-item a { color: var(--accent); }
  .related-heading {
    color: var(--dim);
    font-size: 0.8rem;
    margin-left: 4px;
  }
  .related-snippet {
    color: var(--dim);
    font-size: 0.8rem;
  }

  @media (max-width: 768px) {
    .detail-layout {
      flex-direction: column;
    }
    .detail-sidebar {
      width: 100%;
    }
  }
</style>

