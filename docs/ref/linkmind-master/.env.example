# Telegram Bot（必填）
TELEGRAM_BOT_TOKEN=

# LLM provider: "openai" or "gemini"
LLM_PROVIDER=openai

# OpenAI-compatible API (Qwen/DashScope, OpenAI, etc.)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
OPENAI_DEFAULT_MODEL=qwen-plus

# Google Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# Web server
WEB_PORT=3456
WEB_BASE_URL=http://localhost:3456

# QMD collections
QMD_NOTES_COLLECTION=notes
QMD_LINKS_COLLECTION=links
QMD_LINKS_PATH=~/LocalDocuments/linkmind/links

# Logging
LOG_LEVEL=info
LOG_FILE=
