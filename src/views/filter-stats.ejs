<%- include('layout', { body: `
<style>
  .stats-container {
    max-width: 1200px;
  }

  .section-header {
    margin-bottom: 24px;
    padding-bottom: 12px;
    border-bottom: 1px solid var(--border);
  }

  .section-header h2 {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .stats-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin-bottom: 32px;
  }

  .stat-card {
    background: var(--surface);
    border-radius: 8px;
    padding: 20px;
    border: 1px solid var(--border);
    text-align: center;
  }

  .stat-card .label {
    font-size: 0.85rem;
    color: var(--dim);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
  }

  .stat-card .value {
    font-size: 2rem;
    font-weight: 600;
    color: var(--accent);
  }

  .stat-card .value.pass-rate {
    color: var(--green);
  }

  .stat-card .value.avg-score {
    color: var(--text);
  }

  .stats-section {
    background: var(--surface);
    border-radius: 8px;
    padding: 20px;
    border: 1px solid var(--border);
    margin-bottom: 24px;
  }

  .stats-section h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 16px;
  }

  .stats-table {
    width: 100%;
    border-collapse: collapse;
  }

  .stats-table th,
  .stats-table td {
    text-align: left;
    padding: 10px 12px;
    border-bottom: 1px solid var(--border);
    font-size: 0.9rem;
  }

  .stats-table th {
    background: var(--bg);
    font-weight: 600;
    color: var(--dim);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .stats-table tr:last-child td {
    border-bottom: none;
  }

  .progress-bar-bg {
    width: 100%;
    height: 8px;
    background: var(--border);
    border-radius: 4px;
    overflow: hidden;
  }

  .progress-bar-fill {
    height: 100%;
    background: var(--green);
    transition: width 0.3s;
  }

  .empty-state {
    text-align: center;
    padding: 48px 24px;
    color: var(--dim);
  }

  .empty-state svg {
    width: 64px;
    height: 64px;
    margin-bottom: 16px;
    opacity: 0.5;
  }

  .chart-placeholder {
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg);
    border-radius: 8px;
    color: var(--dim);
  }
</style>

<div class="stats-container">
  <div class="section-header">
    <h2>过滤统计</h2>
  </div>

  <!-- Summary Cards -->
  <div class="stats-cards">
    <div class="stat-card">
      <div class="label">总过滤数量</div>
      <div class="value" id="totalFiltered">-</div>
    </div>
    <div class="stat-card">
      <div class="label">通过数量</div>
      <div class="value" style="color: var(--green);" id="totalPassed">-</div>
    </div>
    <div class="stat-card">
      <div class="label">拒绝数量</div>
      <div class="value" style="color: var(--red);" id="totalRejected">-</div>
    </div>
    <div class="stat-card">
      <div class="label">通过率</div>
      <div class="value pass-rate" id="passRate">-</div>
    </div>
    <div class="stat-card">
      <div class="label">平均相关性分数</div>
      <div class="value avg-score" id="avgScore">-</div>
    </div>
  </div>

  <!-- By Domain Stats -->
  <div class="stats-section">
    <h3>各领域统计</h3>
    <table class="stats-table" id="domainStatsTable">
      <thead>
        <tr>
          <th>领域</th>
          <th>过滤数量</th>
          <th>通过数量</th>
          <th>通过率</th>
          <th>平均分数</th>
        </tr>
      </thead>
      <tbody id="domainStatsBody">
        <!-- Dynamic content -->
      </tbody>
    </table>
    <div id="domainStatsEmpty" class="empty-state" style="display: none;">
      <p>暂无统计数据</p>
    </div>
  </div>

  <!-- Score Distribution -->
  <div class="stats-section">
    <h3>相关性分数分布</h3>
    <div class="chart-placeholder">
      <p>图表功能待实现</p>
    </div>
  </div>
</div>

<script>
// Load stats on page load
loadStats();

async function loadStats() {
  try {
    const res = await fetch('/api/filter/stats');
    const stats = await res.json();
    renderStats(stats);
  } catch (err) {
    console.error('Failed to load stats:', err);
    showEmptyState();
  }
}

function showEmptyState() {
  document.getElementById('totalFiltered').textContent = '0';
  document.getElementById('totalPassed').textContent = '0';
  document.getElementById('totalRejected').textContent = '0';
  document.getElementById('passRate').textContent = '0%';
  document.getElementById('avgScore').textContent = '-';
  document.getElementById('domainStatsTable').style.display = 'none';
  document.getElementById('domainStatsEmpty').style.display = 'block';
}

function renderStats(stats) {
  // Summary cards
  document.getElementById('totalFiltered').textContent = stats.totalFiltered.toLocaleString();
  document.getElementById('totalPassed').textContent = stats.totalPassed.toLocaleString();
  document.getElementById('totalRejected').textContent = stats.totalRejected.toLocaleString();
  document.getElementById('passRate').textContent = (stats.passRate * 100).toFixed(1) + '%';
  document.getElementById('avgScore').textContent = stats.avgRelevanceScore.toFixed(2);

  // Domain stats
  const tbody = document.getElementById('domainStatsBody');
  const emptyState = document.getElementById('domainStatsEmpty');
  const table = document.getElementById('domainStatsTable');

  if (stats.byDomain && stats.byDomain.length > 0) {
    table.style.display = 'table';
    emptyState.style.display = 'none';

    tbody.innerHTML = stats.byDomain.map(domain => \`
      <tr>
        <td><strong>\${escapeHtml(domain.domainName)}</strong></td>
        <td>\${domain.totalFiltered.toLocaleString()}</td>
        <td>\${domain.totalPassed.toLocaleString()}</td>
        <td>
          <div style="display: flex; align-items: center; gap: 8px;">
            <div class="progress-bar-bg" style="width: 80px;">
              <div class="progress-bar-fill" style="width: \${domain.passRate * 100}%;"></div>
            </div>
            <span>\${(domain.passRate * 100).toFixed(1)}%</span>
          </div>
        </td>
        <td>\${domain.avgScore.toFixed(2)}</td>
      </tr>
    \`).join('');
  } else {
    table.style.display = 'none';
    emptyState.style.display = 'block';
  }
}

// Utility function
function escapeHtml(str) {
  if (!str) return '';
  const div = document.createElement('div');
  div.textContent = str;
  return div.innerHTML;
}
</script>
` }) %>
